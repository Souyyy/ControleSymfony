{% extends 'base.html.twig' %}

{% block title %}Liste des Parcours{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Liste des Parcours</h1>

        <a href="{{ path('app_parcours_new') }}" class="inline-block px-6 py-3 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 mb-4">
            Créer un nouveau parcours
        </a>

        <div class="overflow-x-auto bg-white shadow-md rounded-lg">
            <table class="min-w-full text-sm text-left">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-gray-700">Objet</th>
                        <th class="px-6 py-4 text-gray-700">Description</th>
                        <th class="px-6 py-4 text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for parcours in parcours %}
                        <tr class="border-b">
                            <td class="px-6 py-4">{{ parcours.objet }}</td>
                            <td class="px-6 py-4">{{ parcours.description }}</td>
                            <td class="px-6 py-4">
                                <a href="{{ path('app_parcours_show', {'id': parcours.id}) }}" class="text-blue-600 hover:text-blue-800">Voir</a>
                                <a href="{{ path('app_parcours_edit', {'id': parcours.id}) }}" class="text-yellow-600 hover:text-yellow-800 ml-2">Éditer</a>
                                <a href="{{ path('app_parcours_delete', {'id': parcours.id}) }}" class="text-red-600 hover:text-red-800 ml-2" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce parcours ?')">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
