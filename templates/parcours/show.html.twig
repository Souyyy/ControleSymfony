{% extends 'base.html.twig' %}

{% block title %}Parcours{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Parcours</h1>

        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full text-sm text-left">
                <tbody>
                    <tr class="border-b">
                        <th class="px-6 py-4 font-medium text-gray-700">Id</th>
                        <td class="px-6 py-4">{{ parcour.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="px-6 py-4 font-medium text-gray-700">Objet</th>
                        <td class="px-6 py-4">{{ parcour.objet }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="px-6 py-4 font-medium text-gray-700">Description</th>
                        <td class="px-6 py-4">{{ parcour.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_parcours_index') }}" class="text-indigo-600 hover:text-indigo-800">Retour à la liste</a>
            <a href="{{ path('app_parcours_edit', {'id': parcour.id}) }}" class="ml-4 text-yellow-600 hover:text-yellow-800">Éditer</a>
        </div>

        {{ include('parcours/_delete_form.html.twig') }}
    </div>
{% endblock %}
