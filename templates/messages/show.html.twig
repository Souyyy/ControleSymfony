{% extends 'base.html.twig' %}
{% block title %}Message{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto p-6 bg-white rounded-xl shadow-md">
    <h2 class="text-2xl font-semibold mb-4">{{ message.titre }}</h2>
    <p class="mb-2"><span class="font-semibold">De :</span> {{ message.Emet.email }}</p>
    <p class="mb-2"><span class="font-semibold">À :</span> {{ message.Recoit.email }}</p>
    <p class="mb-4"><span class="font-semibold">Date :</span> {{ message.datetime|date('d/m/Y H:i') }}</p>
    <hr class="my-4">
    <p class="mb-6">{{ message.contenu }}</p>

    <div class="flex gap-4">
        <a href="{{ path('app_messages_reply', {id: message.id}) }}" class="text-blue-600 hover:underline">🔁 Répondre</a>
        <a href="{{ path('app_messages_index') }}" class="text-gray-600 hover:underline">← Retour</a>
    </div>
</div>
{% endblock %}
