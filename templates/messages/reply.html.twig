{% extends 'base.html.twig' %}
{% block title %}Répondre à un message{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto p-6 bg-white rounded-xl shadow-md">
    <h1 class="text-xl font-semibold mb-4">Répondre à {{ original.Emet.email }}</h1>

    {{ form_start(form) }}
        <div class="mb-4">{{ form_row(form.titre, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}</div>
        <div class="mb-4">{{ form_row(form.contenu, {'attr': {'class': 'form-textarea mt-1 block w-full'}}) }}</div>
        <div class="mb-4 hidden">{{ form_row(form.Recoit) }}</div>
        <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Envoyer</button>
    {{ form_end(form) }}
</div>
{% endblock %}
